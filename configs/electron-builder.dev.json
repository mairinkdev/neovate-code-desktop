{
  "appId": "com.neovateai.desktop.dev",
  "productName": "Neovate Dev",
  "directories": {
    "output": "release-dev"
  },
  "artifactName": "neovate-dev-${arch}.${ext}",
  "publish": [],
  "files": ["dist/**/*"],
  "asarUnpack": ["**/node_modules/@neovate/code/**/*"],
  "mac": {
    "icon": "build/icons/icon-dev.icns",
    "category": "public.app-category.developer-tools",
    "hardenedRuntime": false,
    "sign": false,
    "target": [
      {
        "target": "dmg",
        "arch": ["arm64", "x64"]
      },
      {
        "target": "zip",
        "arch": ["arm64", "x64"]
      }
    ]
  }
}
